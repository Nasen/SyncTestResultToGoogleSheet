<section class="mdl-grid">
    <div class="mdl-cell mdl-cell--4-col mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title">
            <h2 class="mdl-card__title-text">Todo</h2>
        </div>
        <div class="mdl-cell">
            {{#if todo}}
                <input type="hidden" name="id" value="{{todo.id}}"/>
            {{/if}}
            <p>
                {{todo.rawData}}
            </p>
        </div>
    </div>
    <div class="mdl-cell mdl-cell--4-col mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title">
            <h2 class="mdl-card__title-text">Feedback details</h2>
        </div>
        <form method="post" action="/upsert">
            {{#if Feedback}}
                <input type="hidden" name="id" value="{{Feedback.id}}"/>
            {{/if}}
            <div class="mdl-card__supporting-text">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
                    <input class="mdl-textfield__input" type="text" name="description" value="{{Feedback.description}}">
                    <label class="mdl-textfield__label" for="sample1">description...</label>
                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
                    <input class="mdl-textfield__input" type="text" name="contactName" id="contactName"
                           value="{{Feedback.contactName}}">
                    <label class="mdl-textfield__label" for="sample1">Contact Name...</label>
                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
                    <input class="mdl-textfield__input" type="text" name="occurTime" value="{{Feedback.occurTime}}">
                    <label class="mdl-textfield__label" for="sample1">Occur Time...</label>
                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
                    <input class="mdl-textfield__input" type="text" name="version" value="{{Feedback.version}}">
                    <label class="mdl-textfield__label" for="sample1">Version...</label>
                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
                    <input class="mdl-textfield__input" type="text" name="device" value="{{Feedback.device}}">
                    <label class="mdl-textfield__label" for="sample1">Device...</label>
                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
                    <input class="mdl-textfield__input" type="text" name="osVersion" value="{{Feedback.osVersion}}">
                    <label class="mdl-textfield__label" for="sample1">OS Version...</label>
                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
                    <input class="mdl-textfield__input" type="text" name="mailboxID" value="{{Feedback.mailboxID}}">
                    <label class="mdl-textfield__label" for="sample1">Mailbox ID...</label>
                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
                    <input class="mdl-textfield__input" type="text" pattern="new|pending|closed" name="status" value="{{Feedback.status}}">
                    <label class="mdl-textfield__label" for="sample1">status...</label>
                    <span class="mdl-textfield__error">Must be one of new, pending, or closed</span>
                </div>

            </div>
            <div class="mdl-card__actions">
                <button class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--colored mdl-button--raised">
                    {{#if Feedback}}Save{{else}}Create{{/if}}
                </button>
                <a class="mdl-button mdl-js-button mdl-js-ripple-effect" href="/">Cancel</a>
            </div>
        </form>
    </div>
</section>
